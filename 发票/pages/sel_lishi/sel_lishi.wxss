.invoice_tab{
  height: 88rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.invoice_tab_list{
  width: 50%;
  float: left;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  line-height: 88rpx;
}
.invoice_tab_list.active::after{
  content: " ";
  display: block;
  position: absolute;
  height: 6rpx;
  background: #0076BD;
  left: 50%;
  width: 80rpx;
  margin-left: -40rpx;
  bottom: 0rpx;
}
