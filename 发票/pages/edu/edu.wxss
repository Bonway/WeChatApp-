}
.mianfei_footer_txt{
  margin-top: 120rpx;
  padding: 0 40rpx;
}
.footer_txt{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3F3F3F;
  letter-spacing: 0;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.footer_txt text{
  color: #FF5B5B;
  margin-right: 10rpx;
}
.mianfei_footer{
  height: 96rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 96rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.mf_txt{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
}
.mf_btn{
  float: right;
  width: 288rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #FFf;
  background: #FF962F;
  border-radius: 0;
  font-size: 32rpx;
}